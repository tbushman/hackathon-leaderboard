.form-check.row
  .col
    input(type="radio", id="all", value="All", v-model="picked")
    label(for="all") All
  .col
    input(type="radio", id="online", value="Online Only", v-model="picked")
    label(for="online") Online
  .col
    input(type="radio", id="inPerson", value="In-person", v-model="picked")
    label(for="inPerson") In-Person

    

table.table(cellspacing="0px", width="100%", style="width: 100%;overflow:hidden;")
  thead
    
    tr
      th(v-for='(key, j) in Object.keys(teams[0])',
        v-if="['_id', '__v'].indexOf(key) === -1",
        v-html="(key === 'isOnlineHackathon' ? `<ul><li class='avatar'>Online</li><li class='avatar'> | </li><li class='avatar'>In-person</li></ul>` : `<span>${columns[key]}</span>`)",
        v-bind:width="(key === 'screenshot' ? 120 : '')",
        v-on:click="(['name', 'isOnlineHackathon', 'lighthouse'].indexOf(key) !== -1 ? sortBy(key, ascending) : '')"
        scope="col", style="cursor: pointer;"
        )
      th(v-if="!team.screenshot", width="120", scope="col") Screenshot

  tbody(v-if="picked === 'Online Only'")
    
    tr(v-for='(team, i) in teams', v-if="team.isOnlineHackathon")
      include team.pug

  tbody(v-if="picked === 'In-person'")
    
    tr(v-for='(team, i) in teams', v-if="!team.isOnlineHackathon")
      include team.pug

  tbody(v-if="picked === 'All'")
    tr(v-for='(team, i) in teams')
      include team.pug
